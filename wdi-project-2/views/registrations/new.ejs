<div class="container">
  <h1>Register</h1>

  <form method="POST" action="/register">

    <div class="form-group">
      <label for="brewery">First Name</label>
      <input placeholder="First name" type="text" name="firstName" id="firstName" class="form-control" minlenght="3" required>
    </div>

    <div class="form-group">
      <label for="brewery">Last Name</label>
      <input placeholder="Last name" type="text" name="lastName" id="lastName" class="form-control" minlenght="3" required>
    </div>

    <div class="form-group">
      <label for="brewery">Username</label>
      <input placeholder="Username" type="text" name="username" id="username" class="form-control" minlenght="3" required>
    </div>

    <div class="form-group">
      <label for="brewery">Email</label>
      <input placeholder="Email" type="text" name="email" id="email" class="form-control" minlenght="3" required>
    </div>

    <div class="form-group">
      <label for="brewery">Password</label>
      <input placeholder="Password" type="text" name="password" id="password" class="form-control" minlenght="3" required>
    </div>

    <div class="form-group">
      <label for="brewery">Confirm Password</label>
      <input placeholder="Confirm password" type="text" name="confirmPassword" id="confirmPassword" class="form-control" minlenght="3" required>
    </div>

    <button class="btn btn-primary">Register</button>

  </form>
</div>
